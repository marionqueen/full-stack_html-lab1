generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         Int      @id @default(autoincrement())
  name       String
  department String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("employees")
}

model Leader {
  id          Int      @id @default(autoincrement())
  role        String   @unique
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("leaders")
}